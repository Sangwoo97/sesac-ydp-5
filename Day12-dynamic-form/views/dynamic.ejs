<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <script
            src="https://code.jquery.com/jquery-3.7.0.min.js"
            integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g="
            crossorigin="anonymous"
        ></script>
        <title>동적 폼 전송</title>
    </head>
    <body>
        <h1>동적 폼 전송 연습하기</h1>
        <form name="register" action="">
            <label for="name">이름</label>
            <input type="text" id="name" name="name" value="새싹" />
            <br />

            성별
            <input type="radio" name="gender" value="m" id="male" checked />
            <label for="male">남</label>
            <input type="radio" name="gender" value="f" id="female" />
            <label for="female">여</label>
            <br />
            <button type="button" onclick="ajaxGet();">Ajax Get 제출</button>
            <button type="button" onclick="ajaxPost();">Ajax Post 제출</button>
        </form>

        <div class="result"></div>
        <script>
            const ajaxGet = () => {
                console.log('ajaxGet 함수 호출');
                const form = document.forms['register'];
                console.log(form);
                console.log(form.name.value);
                console.dir(form.gender);
                const data = {
                    name: form.name.value,
                    gender: form.gender.value,
                };

                $.ajax({
                    type: 'get', // 요청의 종류
                    url: '/ajax', // 요청의 경로
                    data, // 요청에 실어보낼 데이터
                    success: (data) => {
                        // 요청이 성공적으로 수행되었을때 실행할 함수
                        const result = document.querySelector('.result');
                        result.style.color = 'blue';
                        result.textContent = `GET완료 받은값: ${data.name}, ${data.gender}입니다.`;
                    },
                });
            };

            const ajaxPost = () => {
                console.log('ajaxPost 함수 호출');
                const form = document.forms['register'];
                const data = {
                    name: form.name.value,
                    gender: form.gender.value,
                };

                $.ajax({
                    type: 'post', // 요청의 종류
                    url: '/ajax', // 요청의 경로
                    data, // 요청에 실어보낼 데이터
                    success: (data) => {
                        // 요청이 성공적으로 수행되었을때 실행할 함수
                        const result = document.querySelector('.result');
                        result.style.color = 'blue';
                        result.textContent = `POST완료 받은값: ${data.name}, ${data.gender}입니다.`;
                    },
                });
            };
        </script>
    </body>
</html>
